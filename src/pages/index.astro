<style>
  /* logo animation */
  .logoslider {
    overflow: hidden;
    display: flex;
    align-items: center;
  }
  .logoslider ul {
    display: flex;
    align-items: center;
    white-space: nowrap;
    animation: logoslider 20s linear infinite;
  }
  .logoslider li {
    padding: 0 15px;
  }

  @keyframes logoslider {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
