---
// streaming
const response = await fetch("https://api.github.com/users/K3ndev");
const DATA = await response.json();
const { company } = DATA;
---

<footer
  class="container mx-auto my-8 max-w-2xl px-4"
  transition:persist
  transition:name="footer"
>
  {
    company ? (
      <p class="mb-2 text-center text-sm italic text-slate-400">
        {company === null
          ? "Status: Seeking new opportunities"
          : `Status: Employed`}
      </p>
    ) : (
      <p class="mb-2 text-center text-sm italic text-slate-400">
        Status:{" "}
        <span class="cursor-wait bg-gray-800 text-gray-800">Loading</span>
      </p>
    )
  }
  <p class="text-center text-sm text-slate-400">Build by me Â©2023</p>
</footer>
